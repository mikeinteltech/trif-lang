{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Trif",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#numbers" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.trif", "match": "//.*$" },
        {
          "name": "comment.block.trif",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.trif",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.trif", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.trif",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.trif", "match": "\\\\." }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.trif",
          "match": "\\b(let|fn|if|else|while|for|in|return|spawn)\\b"
        },
        {
          "name": "constant.language.trif",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.trif",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.trif",
          "match": "(?<=fn\\s)[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    }
  },
  "scopeName": "source.trif"
}
